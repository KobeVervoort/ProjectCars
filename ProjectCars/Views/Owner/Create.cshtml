@model OwnerEditViewModel

@{
    ViewData["Title"] = "Add new owner";
}

<div class="panel panel-default" style="margin-top: 20px">
    <div class="panel-heading" style="font-size: 1.3em">Add a new car</div>
    <div style="padding-left: 16px; padding-bottom: 15px">
        
        <form asp-controller="Owner" asp-action="Persist" method="post">
            <table>
                <tr>
                    <input type="hidden" asp-for="Id" />
                    <td><label asp-for="FirstName">First name:</label></td>
                    <td>
                        <input style="margin: 10px 15px; width: 150px" type="text" asp-for="FirstName" placeholder="Car owner's first name"/>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </td>
                </tr>

                <tr>
                    <td><label asp-for="LastName">Last name:</label></td>
                    <td><input style="margin: 10px 15px; width: 150px" type="text" asp-for="LastName" placeholder="Car owner's last name"/>
                    <span asp-validation-for="LastName" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td><button class="btn btn-primary" type="submit">Save new owner</button></td>
                </tr>

            </table>
        </form>
    </div>
</div>
