@model CarEditViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-12">
        <div>
            <form asp-controller="Car" asp-action="Persist" method="post">
                <input type="hidden" asp-for="Id" />
                
                <div class="form-group">
                    <label asp-for="LicensePlate">License plate:</label>
                    <input type="text" asp-for="LicensePlate" placeholder="Car's license plate number."/>
                    <span asp-validation-for="LicensePlate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Color">Color:</label>
                    <input type="text" asp-for="Color" placeholder="Color of the car."/>
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VersionId">Version:</label>
                    <select asp-for="VersionId" asp-items="Model.Versions"></select>
                    <span asp-validation-for="VersionId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OwnerId">Version:</label>
                    <select asp-for="OwnerId" asp-items="Model.Owners"></select>
                    <span asp-validation-for="OwnerId" class="text-danger"></span>
                </div>
                <input type="submit" value="Save Changes"/>
            </form>
        </div>
    </div>
</div>
